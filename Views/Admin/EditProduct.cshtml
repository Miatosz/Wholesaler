@model Product

@{ Layout = "_AdminLayout";}

<h2>
Edytuj/Dodaj Produkt
</h2>


<form asp-action="EditProduct" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Produkt</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description">Opis</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    Kategoria
    <div class="form-group">
        <select class="form-control" asp-for="@Model.CategoryId" asp-items="ViewBag.Categories"></select>
        <option value="ViewBag.Categories"></option>
        </select>
        @*@<label asp-for="CategoryId">Kategoria</label>
            <input asp-for="CategoryId" class="form-control" />*@
    </div>
    <input asp-for="@Model.CategoryId" value=@Html.DropDownList("Categories") type="hidden" />
    <div class="form-group">
        <label asp-for="Price">Cena</label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Zapisz</button>
        <a asp-action="List" class="btn btn-secondary">Anuluj</a>

    </div>
</form>